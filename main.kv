<MainLayout>:
    imagem: id_imagem
    orientation: 'vertical'
    BoxLayout:
        size_hint_y: None
        height: 30
        Button:
            text: 'Imagem'
            on_release: root.menu_imagem.open(self)
        Button:
            text: 'Filtros'
            on_release: root.menu_filtros.open(self)
        Button:
            text: 'Operações'
            on_release: root.menu_operacoes.open(self)
    BoxLayout:
        Image:
            id: id_imagem
            size: root.size

<MenuImagem>:
    Button:
        text: 'Carregar'
        size_hint_y: None
        height: 44
        on_release: root.select('carregar_imagem')
    Button:
        text: 'Salvar'
        size_hint_y: None
        height: 44
        on_release: root.select('salvar_imagem')
    Button:
        text: 'Limpar'
        size_hint_y: None
        height: 44
        on_release: root.select('limpar', app)
    Button:
        text: 'Escala de Cinza'
        size_hint_y: None
        height: 44
        on_release: root.select('mostrar_imagem_cinza', app)
    Button:
        text: 'Histograma'
        size_hint_y: None
        height: 44
        on_release: root.select('mostrar_histograma', app)
    Button:
        text: 'Equalizar'
        size_hint_y: None
        height: 44
        on_release: root.select('mostrar_imagem_equalizada', app)

<MenuFiltros>:
    Button:
        text: 'Passa Alta'
        size_hint_y: None
        height: 44
        on_release: root.select('aplicar_filtro', app, 'passa_alta')
    Button:
        text: 'Média'
        size_hint_y: None
        height: 44
        on_release: root.select('aplicar_filtro', app, 'media')
    Button:
        text: 'Mediana'
        size_hint_y: None
        height: 44
        on_release: root.select('aplicar_filtro', app, 'mediana')
    Button:
        text: 'Moda'
        size_hint_y: None
        height: 44
        on_release: root.select('aplicar_filtro', app, 'moda')

<MenuOperacoes>:
    Button:
        text: 'NOT'
        size_hint_y: None
        height: 44
        on_release: root.select('aplicar_operacao', app, 'operador_not')
    Button:
        text: 'AND'
        size_hint_y: None
        height: 44
        on_release: root.select('aplicar_operacao', app, 'operador_and')
    Button:
        text: 'OR'
        size_hint_y: None
        height: 44
        on_release: root.select('aplicar_operacao', app, 'operador_or')
    Button:
        text: 'Soma'
        size_hint_y: None
        height: 44
        on_release: root.select('aplicar_operacao', app, 'operador_soma')
    Button:
        text: 'Subtração'
        size_hint_y: None
        height: 44
        on_release: root.select('aplicar_operacao', app, 'operador_subtracao')
    Button:
        text: 'Multiplicação'
        size_hint_y: None
        height: 44
        on_release: root.select('aplicar_operacao', app, 'operador_multiplicao')
    Button:
        text: 'Divisão'
        size_hint_y: None
        height: 44
        on_release: root.select('aplicar_operacao', app, 'operador_divisao')

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserIconView:
            id: filechooser
            path: './imagens'
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancelar"
                on_release: root.fechar()
            Button:
                text: "Carregar"
                on_release: root.carregar(app, filechooser.selection)

<SaveDialog>:
    text_input: text_input
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            path: './imagens'
            on_selection: text_input.text = self.selection and self.selection[0] or ''
        TextInput:
            id: text_input
            size_hint_y: None
            height: 30
            multiline: False
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancelar"
                on_release: root.fechar()
            Button:
                text: "Salvar"
                on_release: root.salvar(app, filechooser.path, text_input.text)

<MascaraDialog>:
    area_mascara: id_area_mascara
    input_dimensao_mascara: id_input_dimensao_mascara
    BoxLayout:
        pos: root.pos
        size: root.size
        orientation: "vertical"
        BoxLayout:
            size_hint_y: None
            height: 30
            size_hint_x: 0.3
            Label:
                text: "Dimensão da Máscara"
            TextInput:
                id: id_input_dimensao_mascara
                input_filter: 'int'
                focus: True
                multiline: False
                size_hint_x: None
                width: 30
        GridLayout:
            id: id_area_mascara
            padding: 10
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancelar"
                on_release: root.fechar()
            Button:
                text: "Aplicar Máscara"
                on_release: root.aplicar_mascara(app)
